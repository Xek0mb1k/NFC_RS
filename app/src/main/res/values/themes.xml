<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NFCRS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorForeground">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryVariant">#FFFAFAFC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="rippleColor">#33FFFFFF</item>

        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="editTextColor">@color/black</item>

        <item name="backgroundColor">#FFFAFAFC</item>

    </style>


</resources>